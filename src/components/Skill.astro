---
import { Icon } from "astro-iconify"

interface Props {
  icon: string
}

const { icon } = Astro.props
---



<div class="skill"><Icon name={icon} /><slot /></div>



<style lang="stylus">
.skill
  display inline-flex
  flex-direction column
  align-items center
  gap .5em
  font-style italic
  font-weight lighter
  font-size .75em
  color silver
  transition color .2s
  user-select none
  > svg:first-child
    width clamp(3.5rem, 10vw, 4rem)
    height @width
    filter drop-shadow(0 0 4px black)
    transition filter .2s, translate .2s
  &:hover
    color white
    > svg:first-child
      filter drop-shadow(0 0 4px teal)
      translate 0 -.25rem
  &:active
    > svg:first-child
      translate 0 -.5rem
</style>