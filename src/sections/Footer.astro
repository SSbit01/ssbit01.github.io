---
import { Icon } from "astro-icon"
import * as profiles from "@/data/profiles"
---



<footer id="end">
  <ul id="profiles">
    {Object.values(profiles).map(({ href, title, icon }) => (
        <li><a href={href} target="_blank" title={title}><Icon name={icon} /></a></li>
    ))}
  </ul>
  <div id="info">
    <p><a href="https://github.com/SSbit01/ssbit01.github.io.git" target="_blank" id="git-repository"><Icon name="mdi:git" />Repository</a></p>
    <p>Built with <a href="https://astro.build" target="_blank">{Astro.generator}</a></p>
    <p>Â© <strong>Stefan Samson</strong></p>
  </div>
</footer>



<style lang="stylus">
#end
  background rgb(10, 15, 20)
  $px = 1em
  padding 2em $px 3em $px
  border-top thin solid darkslategray

#profiles
  list-style none
  display flex
  flex-wrap wrap
  align-items center
  justify-content center
  gap .25em .5em
  padding-left 0
  margin-top 0
  > li > a:first-child
    display inline-block
    color cadetblue
    padding .5em
    border-radius 50%
    transition-property background, color
    transition-duration .2s
    > svg:first-child
      vertical-align middle
      width 3em
      transition filter .15s, translate .2s
    &:hover
      color darkturquoise
      > svg:first-child
        filter drop-shadow(0 0 2px darkturquoise)
        translate 0 -.25em
    &:focus
      color paleturquoise

#info
  color lightgray
  text-align center
  margin-top 1.5em
  > p > a
    color dodgerblue
    text-decoration none
    transition color .15s, text-shadow .15s
    &:hover
      color deepskyblue
      text-decoration underline
    &:active
      text-shadow 0 0 4px

#git-repository
  display inline-flex
  align-items flex-end
  gap .2em
  > svg
    width 1.25em
</style>