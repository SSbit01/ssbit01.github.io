---
import { Icon } from "astro-icon"
import { linkedin, email } from "@/data/profiles"
---



<section id="contact">
  <h1 class="section-header">Contact me</h1>
  <p id="contact-text">You can get in touch with me at <u>any time</u>; I'm interested in new opportunities. If you have any questions, don't hesitate to ask me:</p>
  <ul id="contact-list">
    {[linkedin, email].map(({ href, title, icon }) => (
      <li><a href={href} target="_blank" title={title}><Icon name={icon} /></a></li>
    ))}
  </ul>
</section>



<style lang="stylus">
#contact
  background rgb(10, 20, 30) linear-gradient(135deg, rgb(0, 10, 20), rgb(10, 25, 30))
  $px = 1em
  padding 1.5em $px 5em $px

.section-header
  font-size clamp(2.5em, 12vw, 3em)
  text-align center
  margin 0

#contact-text
  font-size clamp(1em, 1.5vw, 1.2em)
  line-height 1.5
  text-align center
  color gainsboro

#contact-list
  list-style none
  justify-content center
  max-width max-content
  padding-left 0
  border-radius 8px
  box-shadow 0 0 4px steelblue
  overflow hidden
  margin auto
  > li > a:first-child
    display inline-block
    color dodgerblue
    background rgb(0, 10, 20)
    width 100%
    text-decoration none
    box-sizing border-box
    padding .5em .75em
    transition .15s
    &::after
      content attr(title)
    > svg:first-child
      width 3em
      vertical-align middle
      filter drop-shadow(0 0 8px black)
      margin-right .5em
      transition transform .2s
    &:hover
      color deepskyblue
      background rgb(10, 20, 30)
      > svg:first-child
        transform translateY(-.25em)
    &:active
      background rgb(15, 25, 35)
      text-shadow 0 0 3px
</style>